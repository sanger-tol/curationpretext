/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run sanger-tol/curationpretext -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

cleanup = true

process {
    resourceLimits = [
        cpus: 4,
        memory: '10.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    // Limit resources so that this can run on GitHub Actions
    max_cpus    = 4
    max_memory  = '10.GB'
    max_time    = '1.h'

    input       = "${baseDir}/TreeValTinyData/assembly/draft/grTriPseu1.fa"
    longread    = "${baseDir}/TreeValTinyData/genomic_data/pacbio/"
    cram        = "${baseDir}/TreeValTinyData/genomic_data/hic-arima/"
    sample      = "CurationPretextTest"
    teloseq     = "TTAGGG"
    aligner     = "bwamem2"
}
